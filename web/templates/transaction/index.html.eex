<div class="row">
  <%= render ExMoney.SharedView, "dashboard_navbar.html", conn: @conn, navigation: @navigation %>

  <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <h1 class="page-header">Transactions</h1>

    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Date</th>
            <th>Payee</th>
            <th>Description</th>
            <th>Amount</th>
            <th>Account id</th>
          </tr>
        </thead>
        <tbody>
          <%= for transaction <- @transactions do %>
            <tr>
              <td><%= transaction.made_on %></td>
              <td><%= transaction.transaction_info.payee %></td>
              <td><%= transaction.description %></td>
              <td><%= transaction.amount %></td>
              <td><%= transaction.saltedge_account_id %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <nav>
      <ul class="pager">
        <li class="previous <%= disabled_previous_page?(@page_number, @total_pages) %>">
          <a href="<%= build_previous_page_url(@page_number) %>">
            <span aria-hidden="true">&larr;</span> Older
          </a>
        </li>
        <li class="next <%= disabled_next_page?(@page_number, @total_pages) %>">
          <a href="<%= build_next_page_url(@page_number, @total_pages)%>">
            Newer <span aria-hidden="true">&rarr;</span>
          </a>
        </li>
      </ul>
    </nav>
  </div>
</div>
